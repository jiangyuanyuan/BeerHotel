<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle表示为矩形 -->

    <!-- 填充的颜色 -->
    <!--<solid android:color="@color/color_3D8DDF" />-->
    <gradient
        android:startColor="@color/color_BCDFFF"
        android:endColor="@color/color_3D8DDF"
        android:angle="270"
        />
    <!-- 边框的颜色和粗细 -->
    <stroke
        android:width="1dp"
        android:color="@color/color_3D8DDF"
        />

    <!-- android:radius 圆角的半径 -->
    <corners
       android:radius="13dp"
        />

</shape>