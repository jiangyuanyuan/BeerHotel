<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/mIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:src="@mipmap/icon_buy"
        />

    <TextView
        android:id="@+id/mTransactionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="买入"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/mIcon"
        android:textColor="@color/color_333333"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2018-09-20 13:34"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/mIcon"
        android:layout_below="@+id/mTransactionType"
        android:singleLine="true"
        android:ellipsize="end"
        />


    <TextView
        android:id="@+id/mTransactionSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+120.00 Chufa"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="24dp"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/mTransactionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认中"
        android:textColor="@color/color_3D8DDF"
        android:layout_below="@+id/mTransactionSum"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"/>



</RelativeLayout>