<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F5F5F5"
    >

    <com.ope.base.view.HeaderBar
        android:id="@+id/mHeaderBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="提现"/>

    
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        app:layout_constraintTop_toBottomOf="@+id/mHeaderBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="1dp"
        android:paddingLeft="25dp"
        android:paddingRight="31dp"
        android:paddingTop="22dp"
        android:paddingBottom="15dp"
        android:background="@color/common_white"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="澳元AUD"
            android:textSize="16sp"
            android:textColor="@color/color_4A4A4A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现"
            android:textColor="@color/color_4A4A4A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,839.9382 AUD"
            android:textColor="@color/color_999999"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="69dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/color_4A4A4A"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="88dp"
            />
        
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginStart="69dp"
            android:background="@drawable/gray5_gray_shape"
            android:hint="填写金额"
            android:padding="6dp"
            />



    </android.support.constraint.ConstraintLayout>

    
    <RelativeLayout
        android:id="@+id/mSwitchAccountRl"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@+id/mHeaderBar"
        android:layout_marginTop="179dp"
        android:background="@color/common_white"
        >
        <ImageView
            android:id="@+id/mBankIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/bank_card"
            android:layout_marginLeft="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国银行（尾号0987）"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mBankIcon"
            android:layout_marginLeft="4dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换账户"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/common_back_small"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/mSwitchAccountRl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue4_white_shape"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="提交申请"
        android:textColor="@color/color_3D8DDF"
        android:gravity="center"
        android:textSize="16sp"
        />




</android.support.constraint.ConstraintLayout>