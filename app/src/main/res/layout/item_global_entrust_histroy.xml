<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="162dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_white"
    android:layout_marginBottom="4dp"
    android:padding="16dp">
    <TextView

        android:id="@+id/mPurchaseName"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="买入"
        android:padding="0dp"
        android:textSize="15sp"
        android:textColor="@color/color_04C2AA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />
    <TextView
        android:id="@+id/mPurchaseTypeName"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Chufa/AUD"
        android:textColor="@color/color_4A4A4A"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/mPurchaseName"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:46 06/22"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toRightOf="@+id/mPurchaseTypeName"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="撤销"
        android:textColor="@color/color_3D8DDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="12dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        app:layout_constraintTop_toBottomOf="@+id/mPurchaseName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="委托价（AUD）"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
