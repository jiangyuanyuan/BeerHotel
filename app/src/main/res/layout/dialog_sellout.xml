<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="345dp"
        android:background="@color/common_white">

<View
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="1px"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="54dp"
    android:background="@color/color_F5F5F5"
    />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:background="@color/color_F5F5F5"
        />

    <ImageView
        android:id="@+id/mClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/pop_close"
        android:layout_marginStart="16dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="订单确认"
        android:textSize="18sp"
        android:textColor="@color/color_4A4A4A"
        />
    
    <TextView
        android:id="@+id/mSelloutNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="卖出 110.12 Chufa"
        android:textSize="22sp"
        android:textColor="@color/color_4A4A4A"
        android:layout_marginTop="21dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:text="当前单价"
        android:textSize="12sp"
        android:textColor="@color/color_4A4A4A"
        android:layout_marginTop="99dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17dp"
        android:text="6.95 CNY"
        android:textSize="12sp"
        android:textColor="@color/color_333333"
        android:layout_marginTop="99dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:text="手续费"
        android:textSize="12sp"
        android:textColor="@color/color_4A4A4A"
        android:layout_marginTop="129dp"
        android:layout_marginStart="16dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17dp"
        android:text="0.66Chufa (合计4.59Chu"
        android:textSize="12sp"
        android:textColor="@color/color_333333"
        android:layout_marginTop="129dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:text="预计到账"
        android:textSize="12sp"
        android:textColor="@color/color_4A4A4A"
        android:layout_marginTop="160dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17dp"
        android:text="764.5 CNY"
        android:textSize="12sp"
        android:textColor="@color/color_333333"
        android:layout_marginTop="160dp"
        />

    <Button
        android:id="@+id/mOk"
        android:layout_width="343dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@+id/line2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="确认"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/color_3D8DDF"
        android:background="@drawable/blue4_white_shape"
        />


</android.support.constraint.ConstraintLayout>