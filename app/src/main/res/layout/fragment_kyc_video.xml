<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ope.base.view.HeaderBar
        android:id="@+id/mHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="视频认证"
        app:layout_constraintTop_toTopOf="parent"
        />


<View
    android:id="@+id/mView"
    android:layout_width="match_parent"
    android:layout_height="203dp"
    app:layout_constraintTop_toBottomOf="@+id/mHeaderBar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@color/common_white"
    android:layout_marginTop="1dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mHeaderBar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="请录制视频完成上传（限制60s之内）"
        android:textSize="15sp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/color_666666"
        />

    <View
        android:id="@+id/mView2"
        android:layout_width="103dp"
        android:layout_height="103dp"
        app:layout_constraintTop_toBottomOf="@+id/mHeaderBar"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/gray5_gray_shape"
        android:layout_marginTop="60dp"
        android:layout_marginStart="19dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mView2"
        app:layout_constraintBottom_toBottomOf="@+id/mView2"
        app:layout_constraintStart_toStartOf="@+id/mView2"
        app:layout_constraintEnd_toEndOf="@+id/mView2"
        android:src="@mipmap/add_pictures"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mView"
        android:text="本地上传"
        android:textColor="@color/color_3D8DDF"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/mSubmit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="去录制"
        android:textColor="@color/color_3D8DDF"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/blue4_white_shape"
        app:layout_constraintTop_toBottomOf="@+id/mView"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*审核将在1～3个工作日内完成"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/mSubmit"
        />







</android.support.constraint.ConstraintLayout>